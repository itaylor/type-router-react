{
  "name": "@itaylor/type-router-react",
  "version": "0.0.1",
  "description": "React bindings for type-router - A lightweight, type-safe router with first-class TypeScript support",
  "exports": "./type-router-react.tsx",
  "publish": {
    "include": ["type-router-react.tsx", "README.md", "LICENSE"]
  },
  "imports": {
    "@itaylor/type-router": "jsr:@itaylor/type-router@0.0.1",
    "@dnt/mod": "jsr:@deno/dnt@0.42.3",
    "@std/path": "https://deno.land/std@0.208.0/path/mod.ts",
    "@std/assert": "https://deno.land/std@0.208.0/assert/mod.ts",
    "@astral/astral": "jsr:@astral/astral@0.4.5",
    "@types/react": "npm:@types/react@^19.2.2",
    "@types/react-dom": "npm:@types/react-dom@^19.2.2",
    "react": "npm:react@^19.2.0",
    "react-dom": "npm:react-dom@^19.2.0"
  },
  "tasks": {
    "test": "deno task bundle:fixtures && deno task test:unit && deno task test:browser",
    "test:serve": "deno run --allow-net --allow-read scripts/serve-test-fixtures.ts",
    "test:unit": "deno test  --allow-net --allow-read --allow-env --allow-run --allow-write type-router-react.test.tsx",
    "test:browser": "deno run --allow-all scripts/start-server-and-test.ts \"deno task test:serve\" \"deno test --fail-fast --allow-net --allow-read --allow-env --allow-run --allow-write type-router-react.browser.test.ts\"",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check && deno task lint && deno task fmt --check && deno task test",
    "build:npm": "deno run -A scripts/build_npm.ts",
    "bundle:fixtures": "deno bundle --sourcemap=inline --outdir=test-fixtures/dist test-fixtures/*.tsx"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "no-window"]
    }
  },
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "compilerOptions": {
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react@^19.2.0",
    "jsxImportSourceTypes": "@types/react"
  }
}
